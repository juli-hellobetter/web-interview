{
  "compilerOptions": {
    "outDir": "./api/dist",
    "rootDir": "./api",
    "module": "ESNext",
    "allowJs": true,
    "noImplicitAny": false,
    "target": "ES2022",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": ["api/**/*.ts", "api/**/*.js"],
}